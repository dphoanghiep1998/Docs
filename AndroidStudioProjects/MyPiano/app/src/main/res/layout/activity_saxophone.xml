<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_saxo">

    <ImageView
        android:id="@+id/btnHome"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:foreground="@drawable/fg_ripple_effect"
        android:src="@drawable/ic_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/containerMain"
        android:layout_width="330dp"
        android:layout_height="520dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5.0dip"
            android:background="@drawable/ic_bg_saxophone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/note1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginTop="160dp"
                android:src="@drawable/ic_note_saxophone_1" />


            <ImageView
                android:id="@+id/note2"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_note_saxophone_2" />

            <ImageView
                android:id="@+id/note3"
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="18dp"
                android:src="@drawable/ic_note_saxophone_1" />

            <ImageView
                android:id="@+id/note4"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_note_saxophone_1" />

            <ImageView
                android:id="@+id/note5"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_note_saxophone_5" />

            <ImageView
                android:id="@+id/note6"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_note_saxophone_6" />

            <ImageView
                android:id="@+id/note7"
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_note_saxophone_7" />

            <ImageView
                android:id="@+id/note8"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_note_saxophone_8" />


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="-12dp"
        android:src="@drawable/ic_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerMain" />

    <ImageView
        android:id="@+id/note9"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_note_saxophone_8"
        app:layout_constraintBottom_toBottomOf="@id/containerMain"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/note10"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="80dp"
        android:src="@drawable/ic_note_saxophone_10"
        app:layout_constraintBottom_toTopOf="@id/note9"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/note11"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="70dp"
        android:src="@drawable/ic_note_saxophone_11"
        app:layout_constraintBottom_toTopOf="@id/note10"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>